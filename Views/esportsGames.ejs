<!DOCTYPE html>
<html lang="en">
<%- include("./Partials/Head.ejs"); %> 
<body>
    <%- include("./Partials/Navbar.ejs"); %>

   <div class="container">
        <% game.forEach(element => { %>
               <div class="card" style="width: 18rem;">
                    <div class="card-body">
                    <h5 class="card-title">Game Title: <%= element.name %></h5>
                    <p class="card-text">Game Duration: <%= element.duration %></p>
                    <p class="card-text">Game Team Size: <%= element.teamSize %></p>
                    <p class="card-text">Game ID: <%= element.game_id %></p>
               
                    <!-- TODO: GET THE ROUTES FOR THE BUTTONS -->
                    <a href="#" class="btn btn-primary">Players</a>
                    <a href="#" class="btn btn-primary">Edit Game</a>
                    </div>
               </div>
        <% }) %>
   </div>

</body>
</html>