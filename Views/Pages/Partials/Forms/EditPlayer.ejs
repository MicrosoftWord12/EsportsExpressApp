<form action="/esports-players/edit/<%= id %>" method="post">
    
    <div class="form-group">
        <div class="form-group">
            <label for="test" name="<% id %>"></label>
        </div>
        <input type="text" class="form-control" id="exampleInputPassword1" name="name" placeholder="Password">
    </div>
    <div class="form-group">
        <label>Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Enter email Betch">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>