<div class="container">
    <form action="/esports-games/add/" method="post">
    
        <div class="form-group">
            <label for="exampleInputPassword1">Game Name</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="name" placeholder="Game Name">
        </div>
    
        <div class="form-group">
            <label for="exampleInputEmail1">Game Duration</label>
            <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="duration" placeholder="Game Duration">
        </div>
    
        <div class="form-group">
            <label for="exampleInputEmail1">Game Team Size</label>
            <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="team_size" placeholder="Game Duration">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>