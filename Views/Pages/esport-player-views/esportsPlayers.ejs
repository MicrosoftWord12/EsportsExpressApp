<!DOCTYPE html>
<html lang="en">
<%- include("../Partials/Head.ejs") %> 
<body>
    <%- include("../Partials/Navbar.ejs") %>

    <div class="container-fluid">
        <div class="row">
            <% player.forEach(playerObj => { %>
                <div class="col-md-2">
                    <div class="card" style="margin: auto; margin-top: 12px; width: auto; height: 19rem;">
                        <div class="card-body d-flex flex-column">
                            <div class="card-header text-center" style="margin-bottom: 15px;">
                                <h5 class="card-title"><%= playerObj.name %></h5>
                            </div>
                            <p class="card-text">ID: <%= playerObj.player_id %></p>
                            <p class="card-text">Email: <%= playerObj.email %></p>
    
                            <form action="/esports-players/remove/<%= playerObj.player_id %>" method="post">
                                <button type="submit" class="btn btn-lg btn-block btn-primary mt-auto" style="margin-bottom: 15px;">Delete</button>
                            </form>
                            <form action="/esports-players/edit/<%= playerObj.player_id %>/" method="get">
                                <button type="submit" class="btn btn-lg btn-block btn-primary mt-auto">Edit</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>